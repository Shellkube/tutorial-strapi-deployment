services:
  pgsql:
    image: postgres:14.0
    container_name: pgsql
    environment:
      - POSTGRES_USER=strapi
      - POSTGRES_PASSWORD=strapi
      - POSTGRES_DB=strapi
    ulimits:
      nofile:
        soft: 40000
        hard: 40000
    volumes:
      - ./.local/pgsql/data:/var/lib/pgsql
    ports:
      - 5432:5432
    networks:
      - strapi
  strapi:
    build:
      context: ./strapi
    container_name: strapi
    environment:
      - HOST: 0.0.0.0
      - DATABASE_HOST: http://pgsql
      - DATABASE_PORT: 5432
      - DATABASE_NAME: strapi
      - DATABASE_USERNAME: strapi
      - DATABASE_PASSWORD: strapi
      - STRAPI_TELEMETRY_DISABLED: true
    depends_on:
      - pgsql
    ports:
      - 1337:1337
    networks:
      - strapi
  website:
    build:
      context: ./website
    container_name: website
    environment:
      - NEXT_PUBLIC_STRAPI_API_URL: http://strapi:1337
    depends_on:
      - pgsql
    ports:
      - 1337:1337
    networks:
      - strapi

networks:
  strapi: